<!DOCTYPE html>
<html ng-app="accessControl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title BCC- Access Control System</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/AdminLTE.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
</head>
<body ng-controller="rootCtrl">
    <div class="navbar navbar-inverse" style="background-color: #F5F5F5;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Access Control System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @*                <ul class="nav navbar-nav">*@
                @*                    <li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                @*                    <li>@Html.ActionLink("About", "About", "Home")</li>*@
                @*                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                @*                </ul>*@
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-offcanvas row-offcanvas-left">
            <div class="col-md-2">
                <side-bar></side-bar>
            </div>
            <div class="col-md-10">
                <div id="main">
                    <div class="page {{ pageClass }}" ng-view></div>
                </div>
            </div>      
        </div>
        </div><!--/row-offcanvas -->

        <script>
            var baseUrl = @Html.Raw(HttpUtility.JavaScriptStringEncode(Url.Content("~/"), true));

            var helperLib = {
                deleteItem: function(item, list) {
                    var index = list.indexOf(item);
                    if (index > -1) {
                        list.splice(index, 1);
                    }
                }
            },
            serverDateToJS: function(serverDate) {
                var temp = serverDate.replace(/[^0-9 +]/g, ''); 
                return new Date(parseInt(temp));
            }


        </script>


        <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.13/angular-animate.js"></script>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
  

        @Scripts.Render("~/bundles/vendors")
        @Scripts.Render("~/bundles/spa")
    
  
    
</body>
</html>