<!DOCTYPE html>
<html ng-app="accessControl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")

</head>
<body ng-controller="rootCtrl">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @*                <ul class="nav navbar-nav">*@
                @*                    <li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                @*                    <li>@Html.ActionLink("About", "About", "Home")</li>*@
                @*                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                @*                </ul>*@
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="row-offcanvas row-offcanvas-left">
        <side-bar></side-bar>
        <div id="main">
            <div class="page {{ pageClass }}" ng-view></div>
        </div>
    </div><!--/row-offcanvas -->

    <script>
        var baseUrl = @Html.Raw(HttpUtility.JavaScriptStringEncode(Url.Content("~/"), true));

        var helperLib = {
            deleteItem: function(item, list) {
                var index = list.indexOf(item);
                if (index > -1) {
                    list.splice(index, 1);
                }
            }
        }


    </script>


    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.13/angular-animate.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/vendors")
    @Scripts.Render("~/bundles/spa")
</body>
</html>