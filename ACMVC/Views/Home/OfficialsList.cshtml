                    </div>
                </div>
            </div>
            <div class="col-md-10 toppadding">
                <div id="main"> 
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="panel panel-primary">
                                    <div class="panel-heading">
                                        <span class="glyphicon glyphicon-list"></span> &nbsp; All Officials
                                    </div>
                                    <div class="panel-body">
                                        <div class="col-md-12">
                                            <div id="user-thumbnails">

                                                @foreach (OfficialViewModel item in Model.Officials)
                                                {
                                                    <div class="col-md-6">
                                                        <div class="panel panel-info user-thumbnail">
