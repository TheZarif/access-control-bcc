<!DOCTYPE html>
<html ng-app="">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BCC- Access Control System</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/AdminLTE.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link href="~/Content/extra.css" rel="stylesheet" />
    <script src="~/Content/instruct.js"></script>

</head>
<body ng-controller="">
    <div class="navbar navbar-inverse" style="background-color: #25313e;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-next"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home/dash">Access Control System</a>
                <!--@*@Html.ActionLink("Access Control System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@-->
            </div>
            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav">
                        <li>
                            @Html.ActionLink("OfficialsList", "OfficialsList", "Home")
                        </li>
                    </ul>*@

                <!--@*                <ul class="nav navbar-nav"> *@
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    @*</ul>*@-->
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-offcanvas row-offcanvas-left">
            <div class="col-md-2" style="background-color: #41586e;">
                <div id="sidebar" class="sidebar-offcanvas" style="background-color: #41586e; min-height: 500px;">

                    <div class="col-md-12">
                        <h3 style="color: #fff;">Dashboard</h3>
                        <ul class="nav nav-pills nav-stacked">
                            <li class="nav-divider"></li>
                            <li><a href="/Home/OfficialsList">Official<i class="glyphicon glyphicon-globe pull-right"></i></a></li>
                            <li class="nav-divider"></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-10">
                <div class="container toppadding" id="main">
                    <div class="row">
                        <div class="col-md-12 tabcontainer"><button class="btn btn-success activated" id="offi"> Visitors </button><button class="btn btn-default" id="visi"> Officials </button></div>
                        <br />

                        <div class="col-md-12"  style="box-shadow: 0px 1px 2px #aaa; background-color: #fff; padding-bottom: 15px;">
                            <div style="overflow-y: hidden;height:35px;" id="segments">
                                <div class="col-md-12 tabContainer" style="height:35px;position: relative" id="official"><button class="btn btn-success activated" data-step="infoup"> Update Info </button><button class="btn btn-default" data-step="chooseoff"> Choose Official </button><button class="btn btn-default" data-step="createapp"> Create Appointment </button><button class="btn btn-default" data-step="approve"> Appointment List</button></div>
                                <div class="col-md-12 tabContainer" style="height:35px;position: relative" id="visitors"><button class="btn btn-default" data-step="infoup"> Update Info </button><button class="btn btn-default" data-step="approve"> Appointment List</button><button class="btn btn-default" data-step="approveapp"> Approve Appointment</button></div>
                            </div>
                           
                            <div class="stepContainer col-md-12">
                                <div class="panel panel-primary step" id="infoup">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Edit Information</h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="">
                                                    <div class="col-md-6"><p>In the home page of Visitor Test panel click <button class="btn btn-warning">Edit <i class="glyphicon glyphicon-edit"></i></button> to update information</p></div>
                                                    <div class="col-md-6"><img src="~/Content/img/instructions/tht.png" style="height: 300px;"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel panel-primary step" id="chooseoff">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Choose Offical</h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="">
                                                    <div class="col-md-6"><p>Click on <button class="btn btn-default ">Officials  <i class="glyphicon glyphicon-globe"></i></button> to to choose an official to make appointment with.<br> <br />Click on <button class="btn btn-info">Get Appointment</button> to choose an officer</p></div>

                                                    <div class="col-md-6"><p><img src="~/Content/img/instructions/appointment.PNG" style="padidng:10px;box-shadow:0px 2px 3px #AAA;height: 300px;position: static"></p></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="panel panel-primary step" id="createapp">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Create Appointment</h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="">
                                                    <div class="col-md-6">
                                                        After filling the form with suitable information click on <button class="btn btn-success ">Submit</button> when done.
                                                    </div>
                                                    <div class="col-md-6">
                                                        <img src="~/Content/img/instructions/save_appointment.PNG" align="left" style="padidng:10px;box-shadow:0px 2px 3px #AAA;box-sizing: border-box;height: 300px;position: static" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="panel panel-primary step" id="approve">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Appointment List</h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="">
                                                    <div class="col-md-6">From the left menu click on <button class="btn btn-default">Appintment &emsp; <i class="glyphicon glyphicon-send"></i></button> to check appointment list. From the list click <button class="btn btn-info"><i class="ion-edit"></i></button> to approve( for Officals) specific appointment and see status(for Visitors)</p><img src="~/Content/img/instructions/menu.png"></div>
                                                    <div class="col-md-6"><img src="~/Content/img/instructions/appointment_list.png" style="height: 300px;"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="panel panel-primary step" id="approveapp">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Approve Appointment</h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="">
                                                    <div class="col-md-6">Edit <button class="btn btn-info"><i class="ion-edit"></i></button> will pop up a panel to approve or reject an appointment</p></div>
                                                    <div class="col-md-6"><img src="~/Content/img/instructions/apporveApp.png" style="height: 300px;"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>




                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script>
        var baseUrl = @Html.Raw(HttpUtility.JavaScriptStringEncode(Url.Content("~/"), true));

        var helperLib = {
            deleteItem: function(item, list) {
                var index = list.indexOf(item);
                if (index > -1) {
                    list.splice(index, 1);
                }
            },
            serverDateToJS: function(serverDate) {
                var temp = serverDate.replace(/[^0-9 +]/g, '');
                return new Date(parseInt(temp));
            }
        }

        var Statuses = [
            { Id: 1, Type: "Active" },
            { Id: 2, Type: "Disabled" },
            { Id: 3, Type: "Pending" },
            { Id: 1003, Type: "Inactive" }
        ];

        var DeviceTypes = [
            { Id: 1, Name: "Door" },
            { Id: 2, Name: "Flap Gate" },
            { Id: 3, Name: "Vehicle Control" }
        ];

        var VehicleTypes = [
            { Id: 1, Name: "BCC" },
            { Id: 2, Name: "Official" },
            { Id: 3, Name: "Visitor" }
        ];

    </script>


    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.13/angular-animate.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


    @Scripts.Render("~/bundles/vendors")
    @Scripts.Render("~/bundles/spa")



</body>
</html>